<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gameFragments.KorakPoKorakFragment"
    android:orientation="vertical"
    android:background="@drawable/home_background"
    android:gravity="center">

    <LinearLayout
        android:layout_width="375dp"
        android:layout_height="600dp"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/hint1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_edge"
            android:text="HINT 1"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:id="@+id/hint2"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_edge"
            android:text="HINT 2"
            android:textAlignment="center"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:id="@+id/hint3"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_edge"
            android:text="HINT 3"
            android:textAlignment="center"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:id="@+id/hint4"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_edge"
            android:text="HINT 4"
            android:textAlignment="center"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:id="@+id/hint5"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_edge"
            android:text="HINT 5"
            android:textAlignment="center"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:id="@+id/hint6"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_edge"
            android:text="HINT 6"
            android:textAlignment="center"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:id="@+id/hint7"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_edge"
            android:text="HINT 7"
            android:textAlignment="center"
            android:layout_marginBottom="10dp"/>

        <LinearLayout
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/korakpokorak_answer"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edge"
                android:text=""
                android:textAlignment="center"
                android:layout_marginBottom="10dp"/>
            <Button
                android:layout_marginLeft="5dp"
                android:id="@+id/korakpokorak_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirm"
                android:backgroundTint="@color/form_blue"
                />
        </LinearLayout>

        <Button
            android:layout_marginTop="5dp"
            android:id="@+id/korakpokorak_nextGame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="this"
            android:text="Next Game"
            android:layout_gravity="center"
            android:backgroundTint="@color/form_blue"
            tools:ignore="OnClick" />



    </LinearLayout>
</LinearLayout>