                android:layout_marginLeft="15dp"
                android:id="@+id/asocijacije_B2"
                android:layout_width="150dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:text="B2"
                android:textSize="15sp"
                android:textAlignment="center"
                android:background="@drawable/rounded_edge_smaller"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <TextView
                android:id="@+id/asocijacije_A3"
                android:layout_width="150dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:text="A3"
                android:textSize="15sp"
                android:textAlignment="center"
                android:background="@drawable/rounded_edge_smaller"/>
            <TextView
                android:layout_marginLeft="15dp"
                android:id="@+id/asocijacije_B3"
                android:layout_width="150dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:text="B3"
                android:textSize="15sp"
                android:textAlignment="center"
                android:background="@drawable/rounded_edge_smaller"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <TextView
                android:id="@+id/asocijacije_A4"
                android:layout_width="150dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:text="A4"
                android:textSize="15sp"
                android:textAlignment="center"
                android:background="@drawable/rounded_edge_smaller"/>
            <TextView
                android:layout_marginLeft="15dp"
                android:id="@+id/asocijacije_B4"
                android:layout_width="150dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:text="B4"
                android:textSize="15sp"
                android:textAlignment="center"
                android:background="@drawable/rounded_edge_smaller"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <EditText
                android:id="@+id/asocijacije_answerA"
                android:layout_width="150dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="15sp"
                android:textAlignment="center"
                android:background="@drawable/rounded_edge_smaller"/>
            <EditText
                android:layout_marginLeft="15dp"
                android:id="@+id/asocijacije_answerB"
                android:layout_width="150dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="15sp"
                android:textAlignment="center"
                android:background="@drawable/rounded_edge_smaller"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp">
            <Button
                android:id="@+id/asocijacije_nextGame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="this"
                android:text="NG"
                android:visibility="invisible"
                android:backgroundTint="@color/form_blue"
                tools:ignore="OnClick"/>

            <EditText
                android:id="@+id/asocijacije_answerAll"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:text=""
                android:textAlignment="center"
                android:background="@drawable/rounded_edge_smaller"/>

            <Button
                android:id="@+id/asocijacije_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="this"
                android:text="Confirm"
                android:backgroundTint="@color/form_blue"
                tools:ignore="OnClick"/>

        </LinearLayout>


        <LinearLayout
            android:layout_marginBottom="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <EditText
                android:id="@+id/asocijacije_answerC"
                android:layout_width="150dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="15sp"
                android:textAlignment="center"
                android:background="@drawable/rounded_edge_smaller"/>
            <EditText
                android:layout_marginLeft="15dp"
                android:id="@+id/asocijacije_answerD"
                android:layout_width="150dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="15sp"
                android:textAlignment="center"
                android:background="@drawable/rounded_edge_smaller"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <TextView
                android:id="@+id/asocijacije_C4"
                android:layout_width="150dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:text="C4"
                android:textSize="15sp"
