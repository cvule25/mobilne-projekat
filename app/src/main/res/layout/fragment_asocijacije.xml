<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gameFragments.AsocijacijeFragment"
    android:orientation="vertical"
    android:background="@drawable/home_background"
    android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Whose Turn"
            android:textColor="@color/white"
            android:id="@+id/whose_turn"/>
        <LinearLayout
            android:layout_marginTop="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <TextView
                android:id="@+id/asocijacije_A1"
                android:layout_width="150dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:text="A1"
                android:textAlignment="center"
                android:background="@drawable/rounded_edge_smaller"/>
            <TextView
                android:layout_marginLeft="15dp"
                android:id="@+id/asocijacije_B1"
                android:layout_width="150dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:text="B1"
                android:textSize="15sp"
                android:textAlignment="center"
                android:background="@drawable/rounded_edge_smaller"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <TextView
                android:id="@+id/asocijacije_A2"
                android:layout_width="150dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:text="A2"
                android:textSize="15sp"
                android:textAlignment="center"
                android:background="@drawable/rounded_edge_smaller"/>
