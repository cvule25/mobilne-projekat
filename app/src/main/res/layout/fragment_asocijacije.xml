                android:layout_marginLeft="15dp"
                android:id="@+id/asocijacije_D2"
                android:layout_width="150dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:text="D2"
                android:textSize="15sp"
                android:textAlignment="center"
                android:background="@drawable/rounded_edge_smaller"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <TextView
                android:id="@+id/asocijacije_C1"
                android:layout_width="150dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:text="C1"
                android:textSize="15sp"
                android:textAlignment="center"
                android:background="@drawable/rounded_edge_smaller"/>
            <TextView
                android:layout_marginLeft="15dp"
                android:id="@+id/asocijacije_D1"
                android:layout_width="150dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:text="D1"
                android:textSize="15sp"
                android:textAlignment="center"
                android:background="@drawable/rounded_edge_smaller"/>
        </LinearLayout>

</LinearLayout>